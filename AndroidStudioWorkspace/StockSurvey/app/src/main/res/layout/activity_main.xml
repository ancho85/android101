<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_masters"
        android:id="@+id/btn_SyncMasters"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_survey"
        android:id="@+id/btn_StockSurvey"
        android:onClick="onClickNewStockSurvey"
        android:layout_below="@+id/btn_SyncMasters"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_report"
        android:id="@+id/btn_StockReport"
        android:layout_below="@+id/btn_StockSurvey"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickShowStockReport"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_stock"
        android:id="@+id/btn_SyncStock"
        android:layout_below="@+id/btn_StockReport"
        android:layout_alignLeft="@+id/btn_StockReport"
        android:layout_alignStart="@+id/btn_StockReport"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_reset"
        android:id="@+id/btn_StockReset"
        android:layout_below="@+id/btn_SyncStock"
        android:layout_alignLeft="@+id/btn_StockReport"
        android:layout_alignStart="@+id/btn_StockReport"/>

</RelativeLayout>
